model Post {
    id        String   @id @default(cuid())
    title     String
    slug      String   @unique
    content   String
    published Boolean? @default(false)
    imageUri  String?
    author    User     @relation(fields: [authorId], references: [id])
    authorId  String
    updatedAt DateTime @updatedAt
    createdAt DateTime @default(now()) @map("created_at")

    @@index([slug])
    @@map("posts")
}
